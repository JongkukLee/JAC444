package ca.jay.jac444.workshop2;

import java.util.Vector;

public class TriangleBusinessRule<T extends Number> implements BusinessRuleIF<T> {

	
	// check rule
	public boolean ruleCheck(Vector<T> valList)
	{
		T s1 = valList.get(0);		
		T s2 = valList.get(1);		
		T s3 = valList.get(2);		
		
		if(!(s1 + s2 > s3 && s2 + s3 > s1 && s1 + s3 > s2))
		{
			String message = "the sum of any two sides must be greater than the other side.";
			throw new IllegalTriangleException(message, side1, side2, side3);
		}		
		
		
		
		return true;
	}
}
