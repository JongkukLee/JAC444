package ca.jay.jac444.assignment1;

/************************************************************************
 *  Compilation:  Customer.java
 *  Execution:    
 *
 *  This class represent the customer for beauty salon
 *  and has 3 types of memberships: Premium, Gold and Silver. 
 *
 *  Assignment 1- Task1
 *
 *  Output
 *
 * @author Jongkuk Lee
 * @version 1.0
 * @since 2017-10-09
 ************************************************************************/

public class Customer {
	private String name;
	private boolean member;
	private String memberType;

	public enum MemberTypeEnum {  PREMIUM,   GOLD,   SILVER };	
	
	public Customer(String name)
	{
		// default initialization
		name = new String(name);
		member = false;
		memberType = "";
	}

	// return member's name
	public String getName()
	{
		return this.name;		
	}
	// return true or false according to a member type
	public boolean isMember()
	{
		return this.member;		
	}
	
	// set true or false if a customer has a membership
	public void setMember(boolean member)
	{
		this.member = member;
	}
	
	// return a member type
	public String getMemberType()
	{
		return this.memberType;
	}
	
	// set a member type
	public void setMemberType(String type)
	{
		this.memberType = new String(type);
	}	
	
	// get customer information including a customer's name, a member type
	public String toString ()
	{
		StringBuffer b = new StringBuffer();
		return b.append("+ Customer Name: " + this.getName() + "            +")
			  .append("+ Member Type: " + (this.isMember()?this.getMemberType():"") + "            +")
			  .toString();
	}
}
