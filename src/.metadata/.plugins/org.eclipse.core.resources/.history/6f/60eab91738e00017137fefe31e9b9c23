package ca.jay.jac444.workshop3;

public class BusinessRuleImpl implements BusinessRuleIF {
	
	// check rule
	public void ruleCheck(String ruleId, String msg)
	{
		
		
		
    	// check if the words must start with a letter. 
    	for(String e: valList)
    		if(e.length() > 0 && Character.isDigit(e.charAt(0)))
    			throw new Workshop3Exception(ERR2_MSG);		
	}
}
